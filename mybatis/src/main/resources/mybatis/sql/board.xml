<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTO Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.mybatis.repository.BoardRepository">
    <select id="getList" parameterType="kr.co.mybatis.domain.Board" resultType="kr.co.mybatis.domain.Board">
        SELECT B.TITLE
        FROM P_BOARD B
    </select>

    <select id="get" parameterType="int" resultType="kr.co.mybatis.domain.Board">
        SELECT B.BOARD_SEQ, B.TITLE, B.CONTENTS, B.REG_DATE
        FROM T_BOARD B
        WHERE B.BOARD_SEQ = #{boardSeq}
        ORDER BY B.REG_DATE DESC
    </select>

    <select id="save" parameterType="kr.co.mybatis.domain.Board">
        INSERT INTO T_BOARD
        (
         TITLE,
         CONTENTS,
         REG_DATE
        )
        VALUES
        (
         #{title},
         #{contents},
         NOW()
        )
    </select>

    <select id="update" parameterType="kr.co.mybatis.domain.Board">
        UPDATE T_BOARD
        SET
            TITLE = #{title},
            CONTENTS = #{contents}
        WHERE BOARD_SEQ = #{boardSeq}
    </select>

    <select id="delete" parameterType="int">
        DELETE FROM T_BOARD
        WHERE BOARD_SEQ = #{boardSeq}
    </select>
</mapper>